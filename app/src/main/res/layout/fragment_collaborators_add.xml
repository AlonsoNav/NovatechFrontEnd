<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CollaboratorsAddFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="742dp">

        <TextView
            android:id="@+id/collaborators_add_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/collaborators_add_title"
            android:textColor="@color/item_selected"
            android:fontFamily="@font/roboto"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/collaborators_add_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/back"
            android:backgroundTint="@color/btn_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/collaborators_add_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:ems="13"
            android:inputType="text"
            android:fontFamily="@font/roboto_light"
            android:textSize="24sp"
            android:drawableEnd="@drawable/person"
            android:hint="@string/project_add_resource_name"
            android:drawableTint="@color/item_selected"
            android:maxLength="30"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/collaborators_add_title"
            android:autofillHints="name" />

        <EditText
            android:id="@+id/collaborators_add_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="13"
            android:inputType="text"
            android:fontFamily="@font/roboto_light"
            android:textSize="24sp"
            android:drawableEnd="@drawable/id"
            android:hint="@string/collaborators_add_id"
            android:drawableTint="@color/item_selected"
            android:maxLength="11"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/collaborators_add_name"
            android:autofillHints="" />

        <EditText
            android:id="@+id/collaborators_add_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="13"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/roboto_light"
            android:textSize="24sp"
            android:drawableEnd="@drawable/email24"
            android:hint="@string/collaborators_add_email"
            android:drawableTint="@color/item_selected"
            android:maxLength="50"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/collaborators_add_id"
            android:autofillHints="emailAddress" />

        <EditText
            android:id="@+id/collaborators_add_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="13"
            android:inputType="textPassword"
            android:fontFamily="@font/roboto_light"
            android:textSize="24sp"
            android:drawableEnd="@drawable/password"
            android:hint="@string/collaborators_add_password"
            android:drawableTint="@color/item_selected"
            android:maxLength="16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/collaborators_add_email"
            android:autofillHints="password" />

        <EditText
            android:id="@+id/collaborators_add_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="13"
            android:inputType="phone"
            android:fontFamily="@font/roboto_light"
            android:textSize="24sp"
            android:drawableEnd="@drawable/phone24"
            android:hint="@string/collaborators_add_phone"
            android:drawableTint="@color/item_selected"
            android:maxLength="8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/collaborators_add_password"
            android:autofillHints="password" />

        <TextView
            android:id="@+id/collaborators_add_department_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:text="@string/collaborators_add_department"
            android:textColor="@color/item_selected"
            android:fontFamily="@font/roboto"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/collaborators_add_phone" />

        <Spinner
            android:id="@+id/collaborators_add_deparment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/collaborators_add_department_title"
            app:layout_constraintStart_toEndOf="@+id/collaborators_add_department_title" />

        <TextView
            android:id="@+id/collaborators_add_project_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:text="@string/collaborators_add_project"
            android:textColor="@color/item_selected"
            android:fontFamily="@font/roboto"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/collaborators_add_department_title" />

        <Spinner
            android:id="@+id/collaborators_add_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/collaborators_add_project_title"
            app:layout_constraintStart_toEndOf="@+id/collaborators_add_project_title" />

        <Button
            android:id="@+id/collaborators_add_btn"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_btn"
            android:text="@string/collaborators_add_btn"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto"
            android:textColor="@color/white"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>