<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CollaboratorsEditFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="272dp"
            android:background="@drawable/round_profile"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/collaborators_edit_back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/back"
                android:backgroundTint="@color/btn_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/collaborators_edit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto"
                android:text="@string/collaborators_edit_title"
                android:textColor="@color/item_selected"
                android:textSize="28sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/collaborators_edit_picture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="70dp"
                android:contentDescription="@string/profile_picture_description"
                android:src="@drawable/person"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/collaborators_edit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="160dp"
                android:fontFamily="@font/roboto"
                android:text="@string/profile_name"
                android:textColor="@color/item_selected"
                android:textSize="36sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/collaborators_edit_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="210dp"
                android:fontFamily="@font/roboto"
                android:text="@string/profile_id"
                android:textColor="@color/item_selected"
                android:textSize="28sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="470dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

            <TextView
                android:id="@+id/collaborators_edit_department_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="290dp"
                android:background="@drawable/department"
                android:backgroundTint="@color/item_selected"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/collaborators_edit_project_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="225dp"
                android:background="@drawable/project"
                android:backgroundTint="@color/item_selected"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/collaborators_edit_phone_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/telephone"
                android:backgroundTint="@color/item_selected"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/collaborators_edit_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/roboto_light"
                android:text="@string/profile_telephone"
                android:textColor="@color/item_selected"
                android:textSize="28sp"
                app:layout_constraintStart_toEndOf="@id/collaborators_edit_phone_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/collaborators_edit_phone_et"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/roboto_light"
                android:hint="@string/profile_telephone"
                android:textSize="24sp"
                android:inputType="phone"
                android:visibility="gone"
                android:maxLength="8"
                app:layout_constraintStart_toEndOf="@id/collaborators_edit_phone_icon"
                app:layout_constraintTop_toTopOf="parent"
                android:autofillHints="phone" />

            <TextView
                android:id="@+id/collaborators_edit_email_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="95dp"
                android:background="@drawable/email"
                android:backgroundTint="@color/item_selected"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/collaborators_edit_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/roboto_light"
                android:text="@string/profile_email"
                android:textColor="@color/item_selected"
                android:textSize="28sp"
                app:layout_constraintStart_toEndOf="@id/collaborators_edit_email_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/collaborators_edit_email_et"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="85dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/roboto_light"
                android:hint="@string/profile_email"
                android:textSize="24sp"
                android:maxLength="50"
                android:inputType="textEmailAddress"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@id/collaborators_edit_email_icon"
                app:layout_constraintTop_toTopOf="parent"
                android:autofillHints="emailAddress" />

            <TextView
                android:id="@+id/collaborators_edit_password_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="160dp"
                android:background="@drawable/password"
                android:backgroundTint="@color/item_selected"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/collaborators_edit_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="155dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/roboto_light"
                android:text="@string/profile_password"
                android:textColor="@color/item_selected"
                android:textSize="28sp"
                app:layout_constraintStart_toEndOf="@id/collaborators_edit_password_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/collaborators_edit_password_et"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/roboto_light"
                android:hint="@string/collaborators_edit_password"
                android:textSize="24sp"
                android:inputType="textPassword"
                android:visibility="gone"
                android:maxLength="16"
                app:layout_constraintStart_toEndOf="@id/collaborators_edit_password_icon"
                app:layout_constraintTop_toTopOf="parent"
                android:autofillHints="password" />

            <Button
                android:id="@+id/collaborators_edit_btn"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_btn"
                android:text="@string/profile_btn"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Spinner
                android:id="@+id/collaborators_edit_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/collaborators_edit_project_icon"
                app:layout_constraintStart_toEndOf="@+id/collaborators_edit_project_icon"
                app:layout_constraintTop_toTopOf="@+id/collaborators_edit_project_icon" />

            <Spinner
                android:id="@+id/collaborators_edit_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/collaborators_edit_department_icon"
                app:layout_constraintStart_toEndOf="@+id/collaborators_edit_department_icon"
                app:layout_constraintTop_toTopOf="@+id/collaborators_edit_department_icon" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>