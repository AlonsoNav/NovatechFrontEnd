<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CollaboratorsEditFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:background="@drawable/round_profile"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/profile_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto"
                android:text="@string/profile_title"
                android:textColor="@color/item_selected"
                android:textSize="28sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="70dp"
                android:contentDescription="@string/profile_picture_description"
                android:src="@drawable/person"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="160dp"
                android:fontFamily="@font/roboto"
                android:text="@string/profile_name"
                android:textColor="@color/item_selected"
                android:textSize="36sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/profile_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="210dp"
                android:fontFamily="@font/roboto"
                android:text="@string/profile_id"
                android:textColor="@color/item_selected"
                android:textSize="28sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="370dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            tools:layout_editor_absoluteX="-34dp">

            <TextView
                android:id="@+id/profile_telephone_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/telephone"
                android:backgroundTint="@color/item_selected"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



            <EditText
                android:id="@+id/profile_telephone_et"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:autofillHints="phone"
                android:fontFamily="@font/roboto_light"
                android:hint="@string/profile_telephone"
                android:inputType="phone"
                android:maxLength="13"
                android:textSize="24sp"

                app:layout_constraintStart_toEndOf="@id/profile_telephone_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/profile_email_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="95dp"
                android:background="@drawable/email"
                android:backgroundTint="@color/item_selected"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <EditText
                android:id="@+id/profile_email_et"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="85dp"
                android:autofillHints="emailAddress"
                android:fontFamily="@font/roboto_light"
                android:hint="@string/profile_email"
                android:inputType="textEmailAddress"
                android:maxLength="128"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@id/profile_email_icon"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/edit_collaborator_project_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="60dp"
                android:fontFamily="@font/roboto"
                android:text="Project"
                android:textColor="@color/item_selected"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_collaborator_department_title" />

            <TextView
                android:id="@+id/edit_collaborator_department_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="60dp"
                android:fontFamily="@font/roboto"
                android:text="Department"
                android:textColor="@color/item_selected"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_email_et" />

            <Spinner
                android:id="@+id/profile_department_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/edit_collaborator_department_title"
                app:layout_constraintStart_toEndOf="@+id/edit_collaborator_department_title"
                tools:layout_editor_absoluteX="146dp"
                tools:layout_editor_absoluteY="212dp" />

            <Button
                android:id="@+id/profile_btn"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_btn"
                android:fontFamily="@font/roboto"
                android:text="@string/profile_btn"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="28sp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Spinner
                android:id="@+id/profile_project_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/edit_collaborator_project_title"
                app:layout_constraintStart_toEndOf="@+id/edit_collaborator_project_title"
                app:layout_constraintTop_toBottomOf="@+id/profile_department_spinner" />

            <TextView
                android:id="@+id/profile_project_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/project"
                android:layout_marginStart="20dp"
                android:layout_marginTop="160dp"
                android:backgroundTint="@color/item_selected"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/profile_department_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/department"
                android:layout_marginStart="20dp"
                android:layout_marginTop="210dp"
                android:backgroundTint="@color/item_selected"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>